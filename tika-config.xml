<properties>
    <parsers>
        <parser class="org.apache.tika.parser.DefaultParser">
            <!-- this is not formally necessary, but prevents loading of unnecessary parser -->
            <parser-exclude class="org.apache.tika.parser.ocr.TesseractOCRParser"/>
        </parser>     
        <!-- Load TesseractOCRParser (could use DefaultParser if you want others too) -->
        <parser class="org.apache.tika.parser.ocr.TesseractOCRParser">
            <param name="tessdataPath" type="string">/usr/share/tesseract-ocr/4.00/tessdata/heb.traineddata</param>   
            <param name="language" type="string">heb</param>
            <param name="tesseractPath" type="string">/home/linuxbrew/.linuxbrew/bin/tesseract</param>
        </parser>
        <!-- OCR on Rendered Pages -->
        <parser class="org.apache.tika.parser.pdf.PDFParser">
            <params>
                <!-- no_ocr - extract text only
                     ocr_only - don't extract text and just attempt OCR
                     ocr_and_text - extract text and attempt OCR (from Tika 1.24)
                     auto - extract text but if < 10 characters try OCR
                -->
                <param name="ocrStrategy" type="string">auto</param>
                <param name="ocrImageType" type="string">rgb</param>
                <param name="ocrDPI" type="int">300</param>
                <param name="colorSpace" type="string">gray</param>
                <param name="language" type="string">he</param>
                <param name="ocrImageFormatName" type="string">png</param>
                <param name="ocrImageQuality" type="float">1.0</param>
                <param name="enableAutoSpace" type="bool">true</param>
            </params>
        </parser>
    </parsers>
    <server>
        <params>
            <enableUnsecureFeatures>true</enableUnsecureFeatures>
            <cors>*</cors>
            <logLevel>info</logLevel>
        </params>
    </server>
    <pipes>
        <params>
            <tikaConfig>./tika-config.xml</tikaConfig>
        </params>
    </pipes>
    <async>
        <params>
            <timeoutMillis>1000000</timeoutMillis>
        </params>
    </async>
</properties>